<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_partner_property_form" model="ir.ui.view">
        <field name="name">view_partner_property_form_monthly_mode</field>
        <field name="model">res.partner</field>
        <field
            name="inherit_id"
            ref="account_invoice_base_invoicing_mode.view_partner_property_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='invoicing_mode']" position="inside">
                <field
                    name="one_invoice_per_order"
                    attrs="{'invisible': [('invoicing_mode', 'not in', ['monthly'])]}"
                />
            </xpath>
        </field>
    </record>
</odoo>
